<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daenerys.formulario_contraste.Formulario"
    android:background="@color/colorSecundary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOME"
            android:textColor="@color/colorTextPrimary"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:textColor="@color/colorTextPrimary"
            android:ems="10"
            android:textSize="24sp"
            android:hint=" Digite o nome"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorTextPrimary"
            android:background="@drawable/editext_bg" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENDEREÇO"
            android:textColor="@color/colorTextPrimary"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:textSize="24sp"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorTextPrimary"
            android:background="@drawable/editext_bg"
            android:textColor="@color/colorTextPrimary"
            android:hint=" Digite o endereço"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESTADO"
            android:textColor="@color/colorTextPrimary" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@drawable/editext_bg" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CIDADE"
            android:textColor="@color/colorTextPrimary"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:textSize="24sp"
            android:inputType="textPersonName"
            android:background="@drawable/editext_bg"
            android:textColor="@color/colorTextPrimary"
            android:hint=" Digite a cidade"
            android:textColorHint="@color/colorTextPrimary"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textColor="@color/colorTextPrimary"/>

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:background="@drawable/editext_bg"
            android:textColorHint="@color/colorTextPrimary"
            android:textSize="24sp"
            android:textColor="@color/colorTextPrimary"
            android:hint=" example@mail.com"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TELEFONE"
            android:textColor="@color/colorTextPrimary" />


        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="24sp"
            android:inputType="phone"
            android:background="@drawable/editext_bg"
            android:textColor="@color/colorTextPrimary"
            android:hint=" Digite o Telefone"
            android:textColorHint="@color/colorTextPrimary"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="42dp"
                android:background="@color/colorPrimary"
                android:text="CADASTRAR"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                android:contentDescription="cadastar dados"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:text="CORES PADRÕES"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                android:contentDescription="voltar a cores padrões"
                android:onClick="contraste"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
